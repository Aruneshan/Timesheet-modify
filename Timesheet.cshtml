@model IEnumerable<Timesheet>

<table>
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Date</th>
            <th>Time In</th>
            <th>Time Out</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.EmployeeName</td>
                <td>@entry.Date.ToShortDateString()</td>
                <td>@entry.TimeIn.ToString(@"hh\:mm")</td>
                <td>@entry.TimeOut.ToString(@"hh\:mm")</td>
                <td>
                    <a href="@Url.Action("Edit", "Timesheet", new { id = entry.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Timesheet", new { id = entry.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Add Timesheet Entry", "Create")

